<div style="background-image: url('./assets/images/friends.jpeg');height:700px;">
        <div id="loginbox" class="rounded">
            {{!-- Feel free to change the name just putting something here  --}}
            <h2 class="page-title">Bring your A Game!</h2>
            <form id="loginform" class="form-horizontal" role="form">
                <div class="input-group">
                    {{!-- <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span> --}}
                    <label class="loginInfo">User Name</label>
                    <input id="login-username" type="text" class="username loginInfo" name="user_name" value=""
                        placeholder="">
                </div>
                <div style="margin-bottom: 25px" class="input-group">
                    <label class="loginInfo">Password</label>
                    {{!-- <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span> --}}
                    <input id="login-password" type="password" class="loginInfo" name="password" placeholder="">
                </div>
                <div style="margin-top:5px" class="form-group">
                    <!-- Button -->
                    <div class="col-sm-12 controls">
                        <button id="btn-login" type="submit" class="btn btn-success">Login</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 control">
                        Don't have an account!
                        <a id="link-signup" style="text-decoration:underline">
                            Sign Up Here
                        </a>
                    </div>
            </form>
        </div>
</div>